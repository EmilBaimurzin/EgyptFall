<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:background="@drawable/complete">

        <TextView
            android:id="@+id/scores"
            style="@style/BasicText"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:layout_marginTop="135dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/score02"
            android:textColor="#AF0054"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2000" />

        <TextView
            android:id="@+id/best_scores"
            style="@style/BasicText"
            android:layout_marginTop="15dp"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/score02"
            android:textColor="#AF0054"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scores"
            tools:text="2000" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" >

            <com.egypt.game.core.library.CustomImageButton
                android:id="@+id/home"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/home02"/>

            <com.egypt.game.core.library.CustomImageButton
                android:id="@+id/restart"
                android:layout_width="60dp"
                android:layout_marginHorizontal="8dp"
                android:layout_height="50dp"
                android:src="@drawable/restart"/>

            <com.egypt.game.core.library.CustomImageButton
                android:id="@+id/settings"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/settengs03"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>